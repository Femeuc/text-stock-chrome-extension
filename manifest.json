{
    "manifest_version": 2,
    "name": "Text Stock",
    "description": "Save words and phrases for later use",
    "version": "1.0.0",
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [    
        "contextMenus", "storage"
    ],
    "icons": {
        "16": "icon.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    }
}
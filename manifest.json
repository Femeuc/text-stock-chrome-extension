{
    "manifest_version": 2,
    "name": "Text Stock",
    "description": "Save words and phrases for later use",
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "contextMenus"
    ],
    "icons": {
        "16": "icon.png"
    }
}